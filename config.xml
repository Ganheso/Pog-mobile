<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.SquaredStudio.Pog"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Pog!</name>

  <description>
      Pog! is a multi-platform game made with Scratch. The game consists of: Hitting targets, and avoiding bombs.
  </description>

  <author href="https://squared-studio.github.io" email="squaredstudiogamegroup@gmail.com">
      Squared Studio
  </author>

  <icon src="pog!Logo.png" />
  
  <platform name="android" />
  
  <preference name="orientation" value="landscape" />
  <preference name="fullscreen" value="true" />
  <preference name="android-minSdkVersion" value="30" />

</widget>